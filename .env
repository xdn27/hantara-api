# ==============================================================================
# Environment Configuration
# ==============================================================================
# Copy this file to .env and update the values accordingly
# Never commit .env to version control!

# ==============================================================================
# DATABASE (PostgreSQL + Drizzle)
# ==============================================================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Docker dev: postgres://postgres:password@db:5432/hantaradb (inside container)
# Local dev:  postgres://postgres:password@localhost:54321/hantaradb (from host)
POSTGRES_USER="root"
POSTGRES_PASSWORD="root"
POSTGRES_DB="hantaradb"
POSTGRES_PORT="5432"

DATABASE_URL="postgres://root:root@localhost:5432/hantaradb"

# Enable mock database for development without actual DB connection
USE_MOCK_DB="false"

# ==============================================================================
# APPLICATION
# ==============================================================================
# Base URL for your application (used for callbacks, redirects, etc.)
PUBLIC_BASE_URL="http://localhost:5173"

# Node environment
NODE_ENV="development"

# Application Branding
APP_NAME="HantaraCloud"
ADMIN_NAME="HantaraCloud"

# SMTP Configuration
SMTP_HOST="localhost"
SMTP_PORT="25"
SMTP_PORT_TLS="587"
SMTP_PORT_SSL="465"
SMTP_PORT_IMAP="993"
SMTP_PORT_SIEVE="4190"
SMTP_USERNAME="apikey"
SMTP_AUTH_MECHANISM="PLAIN"

# ==============================================================================
# DOMAIN VERIFICATION
# ==============================================================================
DOMAIN_TXT_PREFIX="_hantara"
DOMAIN_VERIFICATION_PREFIX="hantara-verification"
DOMAIN_SPF_INCLUDE="spf.hantara.mail"
DOMAIN_DKIM_SELECTOR="hantara"
DOMAIN_TRACKING_CNAME="track.hantara.mail"

# ==============================================================================
# PAYMENT GATEWAY (Xendit)
# ==============================================================================
XENDIT_SECRET_KEY="xnd_development_xxx"
XENDIT_CALLBACK_TOKEN="your-callback-verification-token"
